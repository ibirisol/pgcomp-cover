% cover default command
\newcommand{\newcover}{%
    %% cover art with latex
    {%
        \clearpage%
        \thispagestyle{empty}%
        \addtocounter{page}{-1}%
        \eject \pdfpagewidth=\@CoverWidth \pdfpageheight=\@CoverHeight \@CoverTextWidth=\@CoverTextWidth \textheight=\@CoverTextHeight%
        \newgeometry{margin=0mm}%
        \begin{figure}%
            \begin{picture}(1,0.70132751)%
                \setlength\tabcolsep{0pt}%
                % call front cover elements
                \put(0,0){\includegraphics[width=\unitlength,page=1]{\@CoverArt}}%
                \artcoverfronttitle{32}{32}{\@CoverTitle}%
                \artcoverfrontauthor{25.13}{25.13}{\@CoverAuthor}%
                \artcoverfrontdocumenttype{18}{18}{\@CoverDocumentType}%
                \artcoverfrontinfo{15}{19.97}{\@CoverInfo}%
                % call back cover elements
                \artcoverbackabstractkeywords{10}{13.355}{\@CoverAbstract}{\@CoverKeywords}%
                \artcoverbackaddressinfo{11.054}{14.68}{\@PGCOMPAddressInfo}%
                % call spine elements
                \artcoverspineinstitution{14}{14}%
                \artcoverspineinfo{12}{12}{\@CoverSpineInfo}%
                \artcoverspinetitle{11}{11}{\@CoverTitle}%
                \artcoverspineauthor{12}{12}{\@CoverAuthor}%
            \end{picture}%
        \end{figure}%
        \restoregeometry%
    }
}

