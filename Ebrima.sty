\ProvidesPackage{ebrima}[2023/06/17 Ibirisol Fontes Ferreira
LaTeX package loading Ebrima TTF font for personal use]
\RequirePackage{iftex}

% Add test for LuaTeX compatibility

\ifLuaTeX
\protected\def\pdfmapline {\pdfextension mapline }
\fi
\pdfmapfile{+ebrima.map}

\IfFileExists{ebrima.ttf}{
    \newcommand\ebrima[1]{\usefont{T1}{ebrima}{m}{n} ##1 }
}{
    \errmessage{The Ebrima TTF file is not present fallbacking to normal text}
    \newcommand\ebrima[1]{ ##1 }
}

\IfFileExists{ebrimabd.ttf}{
    \newcommand\ebrimabd[1]{\usefont{T1}{ebrima}{b}{n} ##1 }
}{
    \errmessage{The Ebrima Bold TTF file is not present fallbacking to normal text}
    \newcommand\ebrimabd[1]{ ##1 }
}

\endinput
